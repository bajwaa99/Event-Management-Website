@model Project.Models.Event

@{
    ViewBag.Title = "Edit";
}


<style>
    body {
        background: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),url(/images/pic-2.jpg);
    }

    .form-control {
        width: 80%;
        margin: auto;
    }
</style>



@using (Html.BeginForm("Edit", "Events", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="single-pricing text-center">
    <h1>EDIT EVENT</h1>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.eventId)
    <h3>Event Type</h3>

    @Html.EditorFor(model => model.event_type, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.event_type, "", new { @class = "text-danger" })

    <br />
    <br />
    <h3>Description</h3>

    @Html.EditorFor(model => model.event_description, new { htmlAttributes = new { @class = "form-control" } })
    @Html.ValidationMessageFor(model => model.event_description, "", new { @class = "text-danger" })


    <br />
    <h3>Image</h3>
    <input name="file" id="file" type="file" class="form-control" />
    @Html.ValidationMessageFor(model => model.event_image, "", new { @class = "text-danger" })
    <br />
    <input type="submit" value="Save" class="btn btn-primary" />


</div>


}



<!--jQuery-->
<script src="~/assets/js/jquery-3.3.1.js"></script>
<!--Plugins-->
<script src="~/assets/js/bootstrap.bundle.js"></script>
<script src="~/assets/js/loaders.css.js"></script>
<script src="~/assets/js/aos.js"></script>
<script src="~/assets/js/swiper.min.js"></script>
<script src="~/assets/js/lightgallery-all.min.js"></script>
<!--Template Script-->
<script src="~/assets/js/main.js"></script>

