@model Project.Models.Feedback

@{
    ViewBag.Title = "Create";
}


<style>
    body {
        background: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),url(/images/pic-2.jpg);
        
    }
</style>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="single-pricing text-center">
        <h1>ADD FEEDBACK</h1>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <h3>Feedback Description</h3>

        @Html.EditorFor(model => model.feedback_description, new { htmlAttributes = new { @class = "form-control", @style = "width:80%; height:100px; margin:auto" } })
        @Html.ValidationMessageFor(model => model.feedback_description, "", new { @class = "text-danger" })

        <br />
        <br />
        <h3>Recommendation</h3>

        @Html.EditorFor(model => model.recommendation, new { htmlAttributes = new { @class = "form-control", @style = "width:80%; height:100px; margin:auto" } })
        @Html.ValidationMessageFor(model => model.recommendation, "", new { @class = "text-danger" })



        <br />
        <input type="submit" value="Create" class="btn btn-primary" />


    </div>

    
}



<!--jQuery-->
<script src="~/assets/js/jquery-3.3.1.js"></script>
<!--Plugins-->
<script src="~/assets/js/bootstrap.bundle.js"></script>
<script src="~/assets/js/loaders.css.js"></script>
<script src="~/assets/js/aos.js"></script>
<script src="~/assets/js/swiper.min.js"></script>
<script src="~/assets/js/lightgallery-all.min.js"></script>
<!--Template Script-->
<script src="~/assets/js/main.js"></script>
